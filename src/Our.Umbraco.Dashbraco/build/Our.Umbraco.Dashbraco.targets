<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <OurUmbracoDashbracoContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Our.Umbraco.Dashbraco\**\*.*</OurUmbracoDashbracoContentFilesPath>
    </PropertyGroup>

    <Target Name="ClearOurUmbracoDashbracoAssets" BeforeTargets="Clean">
        <ItemGroup>
            <OurUmbracoDashbracoDir Include="$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.Dashbraco\" />
        </ItemGroup>
        <Message Text="Clear old OurUmbracoDashbraco data"  Importance="high" />
        <RemoveDir Directories="@(OurUmbracoDashbracoDir)"  />
    </Target>

</Project>
